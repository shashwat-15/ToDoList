<%- include("header") -%> 
    <div class="box" id="heading">
        <h1><%= listTitle %> </h1>
    </div>
    
    <div class="box">
        <% for(let i = 0; i < listItemsArray.length; i++) { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="hidden" name="listName" value="<%= listTitle %>">
                    <input type="hidden" name="itemId" value = "<%= listItemsArray[i]._id %>">
                    <input type="checkbox" name="itemCheckbox" onChange="this.form.submit()">
                    <p><%= listItemsArray[i].name %></p>
                </div> 
            </form>
        <% } %>  
        
        <form action="/" method="post" class="item">
            <input type="text" name="newListItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="list" value="<%= listTitle %>">+</button>
        </form>
    </div>

    <%- include("footer") -%>